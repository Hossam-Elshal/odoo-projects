<odoo>
    <data>
        <record id="change_state_wizard_view_form" model="ir.ui.view">
            <field name="name">change state wizard form</field>
            <field name="model">change_state_wizard</field>
            <field name="arch" type="xml">
                <form create="1" edit="1" delete="1">
                    <group>
                        <field name="property_id" invisible="1"/>
                        <field name="state" required="1"/>
                        <field name="reason" required="1"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-secondary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="change_state_wizard_action" model="ir.actions.act_window">
            <field name="name">change State</field>
            <field name="res_model">change_state_wizard</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</odoo>