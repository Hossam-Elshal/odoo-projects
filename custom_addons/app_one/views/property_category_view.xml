<odoo>
    <data>
        <record id="property_category_tree" model="ir.ui.view">
            <field name="name">property category tree</field>
            <field name="model">property.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="category_manager_id"/>
                </tree>
            </field>
        </record>

        <record id="property_category_form" model="ir.ui.view">
            <field name="name">property category form</field>
            <field name="model">property.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="category_manager_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--action-->
        <record id="property_category_action" model="ir.actions.act_window">
            <field name="name">property Category</field>
            <field name="res_model">property.category</field>
        </record>

        <!--menuitem-->
        <menuitem
                id="property_category_menu_item"
                name="property Category"
                parent="configurations_menu"
                action="property_category_action"
        />
    </data>
</odoo>