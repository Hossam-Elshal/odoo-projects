<odoo>
    <data>
        <record id="tag_view_tree" model="ir.ui.view">
            <field name="name">tag tree</field>
            <field name="model">tag</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="tag_view_form" model="ir.ui.view">
            <field name="name">tag form</field>
            <field name="model">tag</field>
            <!-- name model should be the same of "_name = 'tag'" which in file: tag.py -->
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--action-->
        <record id="tag_action" model="ir.actions.act_window">
            <field name="name">tag</field>
            <field name="res_model">tag</field>
        </record>

        <!--menuitem-->
        <menuitem
                id="tag_menu_item"
                name="Tags"
                parent="configurations_menu"
                action="tag_action"
        />
    </data>
</odoo>